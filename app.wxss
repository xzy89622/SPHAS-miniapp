/** app.wxss - 全局主题（科技暗色 + 玻璃拟态） **/

/* 让所有页面默认更顺滑 */
/* 全局默认：浅色页面更清晰 */
page {
  background: #F6F7FB;
  color: #111;
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC", "Microsoft YaHei", Arial, sans-serif;
}


/* 通用玻璃卡片 */
.glass {
  background: rgba(255, 255, 255, .08);
  border: 1rpx solid rgba(255, 255, 255, .10);
  box-shadow: 0 16rpx 40rpx rgba(0,0,0,.35);
  backdrop-filter: blur(10px);
}

/* 通用按钮 */
.btn {
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 18rpx;
  font-size: 30rpx;
  font-weight: 700;
}

.btn.primary {
  background: linear-gradient(135deg, rgba(0,255,255,.70), rgba(99,102,241,.70));
  color: #001018;
}

.btn.ghost {
  background: rgba(255,255,255,.08);
  border: 1rpx solid rgba(255,255,255,.10);
  color: rgba(255,255,255,.86);
}
