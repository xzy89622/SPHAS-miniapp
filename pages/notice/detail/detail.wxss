/* pages/notice/detail/detail.wxss */

.page{
  min-height: 100vh;
  background: #f6f7fb;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 顶部信息卡片 */
.headerCard{
  background: #fff;
  border-radius: 22rpx;
  padding: 26rpx 24rpx;
  box-shadow: 0 10rpx 26rpx rgba(0,0,0,0.06);
}

.title{
  font-size: 40rpx;
  font-weight: 800;
  line-height: 1.3;
}

.meta{
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
}

/* 正文内容卡片 */
.contentCard{
  margin-top: 18rpx;
  background: #fff;
  border-radius: 22rpx;
  padding: 24rpx;
  box-shadow: 0 10rpx 26rpx rgba(0,0,0,0.06);

  /* 让长文本更易读 */
  font-size: 30rpx;
  line-height: 1.9;
  color: #222;
  word-break: break-all;
}

/* 让 rich-text 内的图片自适应宽度（重要） */
.contentCard img{
  max-width: 100%;
  height: auto;
}

/* 加载态 */
.loadingWrap{
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loadingText{
  color: #999;
  font-size: 28rpx;
}
