.page {
  padding: 24rpx;
  box-sizing: border-box;
}

.header {
  padding: 16rpx 16rpx 20rpx 16rpx;
  border-radius: 20rpx;
  background: #ffffff;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 18rpx;
}

.title {
  font-size: 38rpx;
  font-weight: 700;
}

.sub {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #666;
}

.btn {
  margin-top: 12rpx;
}

.cards {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 18rpx;
}

.card {
  padding: 18rpx;
  border-radius: 20rpx;
  background: #ffffff;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.06);
}

.label {
  font-size: 24rpx;
  color: #666;
}

.value {
  margin-top: 10rpx;
  font-size: 44rpx;
  font-weight: 700;
}

.panel {
  padding: 18rpx;
  border-radius: 20rpx;
  background: #ffffff;
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.06);
}

.panel-title {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  margin-bottom: 12rpx;
}

.hint {
  font-size: 22rpx;
  color: #888;
}

.chart {
  width: 100%;
  height: 320rpx;
  border-radius: 16rpx;
  background: #fafafa;
}

.trend-list {
  margin-top: 14rpx;
}

.trend-item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.trend-item:last-child {
  border-bottom: none;
}

.date {
  color: #333;
  font-size: 26rpx;
}

.val {
  color: #111;
  font-size: 26rpx;
  font-weight: 600;
}

.status {
  margin-top: 20rpx;
  text-align: center;
  color: #666;
  font-size: 26rpx;
}

.err {
  color: #d93025;
}