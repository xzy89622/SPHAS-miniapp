<!-- pages/article/detail/detail.wxml -->
<view class="page">

<!-- 头部：标题 + 信息 -->
<view wx:if="{{detail}}" class="headerCard">
  <view class="title">{{detail.title}}</view>

  <view class="metaRow">
    <view class="meta">{{detail.publishTime}}</view>
    <view class="meta" wx:if="{{detail.views != null}}">阅读 {{detail.views}}</view>
  </view>

  <image
    wx:if="{{detail.coverUrl}}"
    class="cover"
    mode="aspectFill"
    src="{{detail.coverUrl}}"
  />
  <view wx:if="{{detail.summary}}" class="summary">{{detail.summary}}</view>
</view>

<!-- 正文：富文本 -->
<view wx:if="{{detail}}" class="contentCard">
  <rich-text nodes="{{nodes}}"></rich-text>
</view>

<!-- 加载态 -->
<view wx:else class="loadingWrap">
  <view class="loadingText">加载中...</view>
</view>

</view>
