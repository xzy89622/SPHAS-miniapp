/* pages/article/list/list.wxss */
.page{
  min-height: 100vh;
  background: #f6f7fb;
  padding: 24rpx;
  box-sizing: border-box;
}

.topBar{
  margin-bottom: 16rpx;
}

.tip{
  font-size: 26rpx;
  color: #666;
}

.item{
  background:#fff;
  border-radius: 22rpx;
  padding: 22rpx;
  margin-bottom: 18rpx;
  box-shadow: 0 10rpx 26rpx rgba(0,0,0,0.06);
}

.title{
  font-size: 32rpx;
  font-weight: 800;
  line-height: 1.3;
}

.meta{
  margin-top: 10rpx;
  font-size: 24rpx;
  color:#999;
}

.empty{
  margin-top: 120rpx;
  text-align: center;
  color:#999;
  font-size: 28rpx;
}

.footer{
  padding: 10rpx 0 30rpx;
  text-align: center;
}

.footerText{
  font-size: 24rpx;
  color:#999;
}
