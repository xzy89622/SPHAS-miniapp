<view class="page">
  <view class="bg"></view>

  <view class="card glass">
    <view class="cardTitle">创建账号</view>
    <view class="cardSub">注册后将自动登录</view>

    <view class="form">
      <view class="field">
        <view class="label">账号</view>
        <input class="input" placeholder="请输入账号（建议手机号/学号）" value="{{username}}" bindinput="onUsername" />
      </view>

      <view class="field">
        <view class="label">昵称</view>
        <input class="input" placeholder="可选：昵称" value="{{nickname}}" bindinput="onNickname" />
      </view>

      <view class="field">
        <view class="label">手机号</view>
        <input class="input" placeholder="可选：11位手机号" type="number" maxlength="11" value="{{phone}}" bindinput="onPhone" />
      </view>

      <view class="field">
        <view class="label">密码</view>
        <input class="input" placeholder="请输入密码" password value="{{password}}" bindinput="onPassword" />
      </view>

      <view class="field">
        <view class="label">确认密码</view>
        <input class="input" placeholder="再次输入密码" password value="{{password2}}" bindinput="onPassword2" />
      </view>

      <button class="btn primary" loading="{{submitting}}" bindtap="onRegister">注册并登录</button>
      <button class="btn ghost" bindtap="goLogin">已有账号？返回登录</button>
    </view>
  </view>
</view>
