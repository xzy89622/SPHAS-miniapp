.page { min-height: 100vh; padding: 40rpx; position: relative; }
.bg { position: fixed; inset: 0; background: radial-gradient(800rpx 800rpx at 20% 10%, rgba(0,255,255,.18), transparent 55%),
                                   radial-gradient(900rpx 900rpx at 80% 30%, rgba(99,102,241,.18), transparent 55%),
                                   linear-gradient(180deg, #070B18 0%, #090A12 100%); z-index: -1; }
.card { width: 100%; max-width: 680rpx; margin: 0 auto; padding: 44rpx; border-radius: 28rpx; }
.cardTitle { font-size: 44rpx; font-weight: 700; color: #fff; }
.cardSub { margin-top: 8rpx; font-size: 26rpx; color: rgba(255,255,255,.65); }
.form { margin-top: 28rpx; display: flex; flex-direction: column; gap: 18rpx; }
.field .label { font-size: 24rpx; color: rgba(255,255,255,.72); margin-bottom: 10rpx; }
.input { height: 92rpx; border-radius: 18rpx; padding: 0 24rpx; background: rgba(255,255,255,.08); color: #fff; border: 1rpx solid rgba(255,255,255,.10); }
.btn { margin-top: 10rpx; border-radius: 18rpx; }
