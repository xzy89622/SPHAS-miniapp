.page { min-height: 100vh; padding: 28rpx; background: #070B18; }
.topbar { display:flex; align-items:center; justify-content:space-between; margin-bottom: 18rpx; }
.title { color:#fff; font-size: 38rpx; font-weight: 700; }
.miniBtn { padding: 12rpx 20rpx; border-radius: 999rpx; background: rgba(255,255,255,.12); color: #fff; font-size: 26rpx; }
.cardList { display:flex; flex-direction:column; gap: 16rpx; }
.item { padding: 22rpx; border-radius: 22rpx; }
.row { display:flex; align-items:center; justify-content:space-between; gap: 16rpx; }
.itTitle { color:#fff; font-size: 30rpx; font-weight: 650; }
.badge { padding: 6rpx 14rpx; border-radius: 999rpx; font-size: 22rpx; color:#fff; }
.badge.warn { background: rgba(245,158,11,.25); border: 1rpx solid rgba(245,158,11,.35); }
.badge.ok { background: rgba(34,197,94,.22); border: 1rpx solid rgba(34,197,94,.35); }
.itSub { margin-top: 10rpx; color: rgba(255,255,255,.72); font-size: 26rpx; }
.itTime { margin-top: 8rpx; color: rgba(255,255,255,.45); font-size: 22rpx; }
.hint { color: rgba(255,255,255,.6); padding: 20rpx; }
.empty { padding: 70rpx 24rpx; text-align:center; }
.emptyTitle { color:#fff; font-size: 34rpx; font-weight: 700; }
.emptySub { margin-top: 10rpx; color: rgba(255,255,255,.6); font-size: 26rpx; }
.btn { margin-top: 24rpx; }
