.page { min-height: 100vh; padding: 28rpx; background: #070B18; }
.title { color:#fff; font-size: 38rpx; font-weight: 800; margin-bottom: 18rpx; }
.card { padding: 22rpx; border-radius: 22rpx; }
.label { color: rgba(255,255,255,.72); font-size: 24rpx; margin-bottom: 10rpx; }
.input { height: 92rpx; border-radius: 18rpx; padding: 0 24rpx; background: rgba(255,255,255,.08); color: #fff; border: 1rpx solid rgba(255,255,255,.10); }
.textarea { height: 260rpx; border-radius: 18rpx; padding: 18rpx 20rpx; background: rgba(255,255,255,.08); color:#fff; border: 1rpx solid rgba(255,255,255,.10); }
.imgRow { display:flex; flex-wrap:wrap; gap: 14rpx; margin-top: 10rpx; }
.imgBox { width: 150rpx; height: 150rpx; border-radius: 18rpx; background: rgba(255,255,255,.08); border: 1rpx solid rgba(255,255,255,.10); }
.imgBox.add { display:flex; align-items:center; justify-content:center; color: rgba(255,255,255,.7); font-size: 56rpx; }
.btn { margin-top: 22rpx; }
