<view class="page">
  <view wx:if="{{loading}}" class="hint">加载中...</view>

  <view wx:if="{{!loading && detail}}" class="card glass">
    <view class="row">
      <view class="title">{{detail.feedback.title}}</view>
      <view class="badge {{detail.feedback.status === 'CLOSED' ? 'ok' : 'warn'}}">
        {{detail.feedback.status === 'CLOSED' ? '已处理' : '处理中'}}
      </view>
    </view>

    <view class="sub">提交时间：{{detail.feedback._time}}</view>
    <view class="content">{{detail.feedback.content}}</view>

    <view wx:if="{{detail.attachments && detail.attachments.length}}" class="sec">
      <view class="secTitle">附件</view>
      <view class="imgRow">
        <image wx:for="{{detail.attachments}}" wx:key="id"
          class="imgBox" mode="aspectFill" src="{{item.fileUrl}}"
          bindtap="previewRemote" data-src="{{item.fileUrl}}" />
      </view>
    </view>

    <view wx:if="{{detail.replies && detail.replies.length}}" class="sec">
      <view class="secTitle">处理记录</view>
      <view class="reply" wx:for="{{detail.replies}}" wx:key="id">
        <view class="rTop">
          <view class="rRole">{{item.senderRole}}</view>
          <view class="rTime">{{item._time}}</view>
        </view>
        <view class="rText">{{item.content}}</view>
      </view>
    </view>
  </view>
</view>
