.page { min-height: 100vh; padding: 28rpx; background: #070B18; }
.card { padding: 22rpx; border-radius: 22rpx; }
.row { display:flex; align-items:center; justify-content:space-between; gap: 16rpx; }
.title { color:#fff; font-size: 34rpx; font-weight: 800; }
.badge { padding: 6rpx 14rpx; border-radius: 999rpx; font-size: 22rpx; color:#fff; }
.badge.warn { background: rgba(245,158,11,.25); border: 1rpx solid rgba(245,158,11,.35); }
.badge.ok { background: rgba(34,197,94,.22); border: 1rpx solid rgba(34,197,94,.35); }
.sub { margin-top: 10rpx; color: rgba(255,255,255,.5); font-size: 22rpx; }
.content { margin-top: 16rpx; color: rgba(255,255,255,.82); font-size: 28rpx; line-height: 1.7; }
.sec { margin-top: 18rpx; }
.secTitle { color: rgba(255,255,255,.72); font-size: 24rpx; margin-bottom: 10rpx; }
.imgRow { display:flex; flex-wrap:wrap; gap: 14rpx; }
.imgBox { width: 160rpx; height: 160rpx; border-radius: 18rpx; background: rgba(255,255,255,.08); border: 1rpx solid rgba(255,255,255,.10); }
.reply { margin-top: 12rpx; padding: 16rpx; border-radius: 18rpx; background: rgba(255,255,255,.06); border: 1rpx solid rgba(255,255,255,.08); }
.rTop { display:flex; align-items:center; justify-content:space-between; }
.rRole { color:#fff; font-size: 24rpx; font-weight: 700; }
.rTime { color: rgba(255,255,255,.45); font-size: 22rpx; }
.rText { margin-top: 8rpx; color: rgba(255,255,255,.78); font-size: 26rpx; line-height: 1.65; }
.hint { color: rgba(255,255,255,.6); padding: 20rpx; }
