<view class="container">
  <view class="header">
    <view class="title">SPHAS 健康助手</view>
    <view class="sub">请选择功能</view>
  </view>

  <view class="grid">
    <view class="card" bindtap="goNotice">
      <view class="cardTitle">系统公告</view>
      <view class="cardDesc">查看平台通知与公告</view>
    </view>

    <view class="card" bindtap="goArticle">
      <view class="cardTitle">健康科普</view>
      <view class="cardDesc">科普文章与知识库</view>
    </view>

    <!-- ✅ 体质记录：去录入页 -->
    <view class="card" bindtap="goRecord">
      <view class="cardTitle">体质记录</view>
      <view class="cardDesc">录入今日数据</view>
    </view>

    <!-- ✅ 风险预警：先去风险页（我们下面会做一个“占位风险页”） -->
    <view class="card" bindtap="goRisk">
      <view class="cardTitle">风险预警</view>
      <view class="cardDesc">生成风险评估与历史</view>
    </view>

    <!-- ✅ 最近记录：你也可以保留一个入口更顺手 -->
    <view class="card" bindtap="goLatest">
      <view class="cardTitle">最近记录</view>
      <view class="cardDesc">查看近 7 条数据</view>
    </view>

    <view class="card danger" bindtap="logout">
      <view class="cardTitle">退出登录</view>
      <view class="cardDesc">清除 token 并返回登录页</view>
    </view>
  </view>
</view>
