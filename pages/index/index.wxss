.container{
  padding: 28rpx;
  background: #f6f7fb;
  min-height: 100vh;
}

.header{
  padding: 18rpx 8rpx 26rpx;
}

.title{
  font-size: 44rpx;
  font-weight: 800;
}

.sub{
  margin-top: 10rpx;
  color: #666;
  font-size: 28rpx;
}

.grid{
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.card{
  background: #fff;
  border-radius: 22rpx;
  padding: 24rpx;
  box-shadow: 0 10rpx 26rpx rgba(0,0,0,0.06);
}

.cardTitle{
  font-size: 32rpx;
  font-weight: 700;
}

.cardDesc{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.danger{
  border: 1rpx solid #ffe1e1;
}
